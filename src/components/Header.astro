---
const blogName = "ai-art-collective";
const projectTitle = "AI Art Collective: Where Machines Meet Muse";
---

<header class="bg-white shadow">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 justify-between">
      <div class="flex">
        <div class="flex flex-shrink-0 items-center">
          <a href="/" class="text-xl font-bold text-gray-900 hover:text-gray-700">{projectTitle}</a>
        </div>
        <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
          <a href="/" class="inline-flex items-center border-b-2 border-indigo-500 px-1 pt-1 text-sm font-medium text-gray-900 hover:border-indigo-700 hover:text-gray-700">Home</a>
          <a href="/blog" class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Blog</a>
          <a href="/galleries" class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Galleries</a>
          <a href="/about" class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">About</a>
          <a href="/shop" class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Shop</a>
        </div>
      </div>
      
    </div>
  </div>

  
  <div class="sm:hidden">
    <div class="space-y-1 px-2 pb-3 pt-2">
      <a href="/" class="bg-indigo-50 border-indigo-500 text-indigo-700 block rounded-md py-2 px-3 text-base font-medium">Home</a>
      <a href="/blog" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 block rounded-md py-2 px-3 text-base font-medium">Blog</a>
      <a href="/galleries" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 block rounded-md py-2 px-3 text-base font-medium">Galleries</a>
      <a href="/about" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 block rounded-md py-2 px-3 text-base font-medium">About</a>
      <a href="/shop" class="border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 block rounded-md py-2 px-3 text-base font-medium">Shop</a>
    </div>
  </div>
</header>