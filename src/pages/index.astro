---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "AI Art Collective: Where Machines Meet Muse";
const blogName = "ai-art-collective";
const blogTheme = "art generated by artificial intelligence";
const description = "Explore the fascinating intersection of art and artificial intelligence.";
---

<BaseLayout title={pageTitle} description={description}>
	<div class="hero bg-gradient-to-r from-purple-500 to-blue-500 text-white py-20 px-8 md:px-16 lg:px-24">
		<div class="container mx-auto text-center">
			<h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">Welcome to {blogName}!</h1>
			<p class="text-lg md:text-xl mb-8">A curated collection of {blogTheme}.</p>
			<a href="/blog" class="bg-white text-purple-700 py-3 px-6 rounded-full font-semibold hover:bg-purple-100 transition-colors duration-300">Explore the Art Blog</a>
		</div>
	</div>

	<div class="container mx-auto py-12 px-8 md:px-16 lg:px-24">
		<section class="mb-12">
			<h2 class="text-3xl font-semibold mb-4 text-gray-800">About AI Art Collective</h2>
			<p class="text-gray-700 leading-relaxed">
				This is a space where technology and creativity converge. We showcase the remarkable artwork created by artificial intelligence, exploring the boundaries of what's possible when machines meet muse. Discover unique galleries, insightful articles, and opportunities to own a piece of the future of art.
			</p>
		</section>

		<section>
			<h2 class="text-3xl font-semibold mb-4 text-gray-800">Featured Galleries</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					<!-- Example Gallery Item - Replace with dynamic content later -->
					<div class="rounded-lg overflow-hidden shadow-md">
						<img src="/placeholder.jpg" alt="AI Art Example" class="w-full h-48 object-cover">
						<div class="p-4">
							<h3 class="text-xl font-semibold text-gray-800 mb-2">Gallery Title</h3>
							<p class="text-gray-600">A brief description of the gallery's theme and AI artist.</p>
						</div>
					</div>
						<div class="rounded-lg overflow-hidden shadow-md">
						<img src="/placeholder.jpg" alt="AI Art Example" class="w-full h-48 object-cover">
						<div class="p-4">
							<h3 class="text-xl font-semibold text-gray-800 mb-2">Gallery Title</h3>
							<p class="text-gray-600">A brief description of the gallery's theme and AI artist.</p>
						</div>
					</div>
						<div class="rounded-lg overflow-hidden shadow-md">
						<img src="/placeholder.jpg" alt="AI Art Example" class="w-full h-48 object-cover">
						<div class="p-4">
							<h3 class="text-xl font-semibold text-gray-800 mb-2">Gallery Title</h3>
							<p class="text-gray-600">A brief description of the gallery's theme and AI artist.</p>
						</div>
					</div>
										
			</div>
		</section>
	</div>
</BaseLayout>